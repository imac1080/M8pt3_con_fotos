
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/intentsTextView"
        android:layout_width="113dp"
        android:layout_height="35dp"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/personaImageView"
        android:paddingTop="10dp" />

    <TextView
        android:id="@+id/nomTextView"
        android:layout_width="160dp"
        android:layout_height="33dp"
        android:layout_marginStart="18dp"
        android:layout_marginLeft="18dp"
        android:layout_toEndOf="@+id/intentsTextView"
        android:layout_toRightOf="@+id/intentsTextView"
        android:paddingTop="10dp" />

    <ImageView
        android:id="@+id/personaImageView"
        android:layout_width="96dp"
        android:layout_height="50dp"
        app:srcCompat="@mipmap/ic_launcher" />
</RelativeLayout>
